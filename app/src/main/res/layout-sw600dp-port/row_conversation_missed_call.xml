<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical"
    >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >

        <FrameLayout
            android:layout_width="@dimen/wire__call_indicator__large__width"
            android:layout_height="@dimen/wire__call_indicator__large__width"
            android:layout_marginRight="@dimen/row_conversation__missed_call__margin"
            android:layout_gravity="right"
            tools:ignore="UselessParent"
            >

            <com.waz.zclient.views.calling.StaticCallingIndicator
                android:id="@+id/sci__conversation__missed_call__image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:innerOpacity="@integer/wire__call_indicator__inner_opacity"
                app:innerRadius="@dimen/wire__call_indicator__large__inner_radius"
                app:middleOpacity="@integer/wire__call_indicator__missed_or_ongoing__middle_opacity"
                app:middleRadius="@dimen/wire__call_indicator__large__middle_radius"
                app:outerOpacity="@integer/wire__call_indicator__missed_or_ongoing__outer_opacity"
                app:outerRadius="@dimen/wire__call_indicator__large__outer_radius"
                />

            <com.waz.zclient.views.chathead.ChatheadImageView
                android:id="@+id/civ__row_conversation__missed_call_chathead"
                android:layout_width="@dimen/content__separator__chathead__size"
                android:layout_height="@dimen/content__separator__chathead__size"
                android:layout_gravity="center"
                />

        </FrameLayout>


    </FrameLayout>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/ttv__row_conversation__missed_call"
        android:layout_width="@dimen/content__width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/wire__text_size__small"
        android:textColor="?wirePrimaryTextColor"
        app:font="@string/wire__typeface__light"
        />

    <!-- Dummy view to center text label -->
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf"
        />

</LinearLayout>
